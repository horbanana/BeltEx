@model User

<form action="RegCheck" method="post">
    <div class = "form-group">
        <label>Name</label>
        <span asp-validation-for="Name" style="color:red;"></span>
        <input class="form-control" asp-for="Name">
    </div>
    <div class = "form-group">
        <label>Email</label>
        <span asp-validation-for="Email" style="color:red;"></span>
        <input class="form-control" asp-for="Email">
    </div>
    <div class = "form-group">
        <label>Password</label>
        <span asp-validation-for="Password" style="color:red;"></span>
        <input type="password" class="form-control" asp-for="Password">
    </div>
    <div class = "form-group">
        <label>Confirm Password</label>
        <span asp-validation-for="ConfirmPassword" style="color:red;"></span>
        <input type="password" class="form-control" asp-for="ConfirmPassword">
    </div>
    <input type="submit" class="btn btn-secondary">
</form> 