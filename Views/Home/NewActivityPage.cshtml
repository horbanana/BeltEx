@model ActivityModel
<header>
    <a style="float:right;" class="btn btn-danger" href="/logout">Logout</a>
    <a style="float:right; margin-right:10px;" class="btn btn-secondary" href="/">Home</a>
    <h1 class="center">Dojo Activity Center</h1> 
</header>

<div class="col-md-10">
    <div class="container">
        <h2>Add an Activity</h2>
        <form action="/AddNewActivity"  method="POST">
            <div class="form-group">
                <label asp-for="Title">Title:</label>
                <span class="err" asp-validation-for="Title"></span>
                <input class="form-control" asp-for="Title">
            </div>
            <div class="form-group">
                <label asp-for="Date">Date:</label>
                <span class="err" asp-validation-for="Date"></span>
                <input type="datetime-local" name="Date" class="form-control" asp-for="Date">
            </div>
            <div class="form-group">
                    <label asp-for="Duration">Duration:</label>
                    <span class="err" asp-validation-for="Duration"></span>
                    <input asp-for="Duration" class="form-control" asp-for="Duration">
                    <span class="err" asp-validation-for="DurationStr"></span>
                    <select asp-for="DurationStr" class="form-control" asp-for="DurationStr">
                        <option>-</option>
                        <option>Minutes</option>
                        <option>Hours</option>
                        <option>Days</option>
                    </select>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <span class="err" asp-validation-for="Description"></span>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>
           
            
            <button type="submit" class="btn btn-primary">Create Activity</button>
        </form>
    </div>
</div>